{
  "name": "typescript-npm-package-boilerplate",
  "version": "0.2.0",
  "description": "TypeScript NPM Package Boilerplate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZuz14/typescript-npm-package-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "npm package boilerplate"
  ],
  "author": "Daniel Zuzevich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DZuz14/typescript-npm-package-boilerplate/issues"
  },
  "homepage": "https://github.com/DZuz14/typescript-npm-package-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.0",
    "prettier": "^2.3.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "files": [
    "dist/**/*"
  ]
}
